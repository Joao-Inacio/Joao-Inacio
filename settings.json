{
    // ========================================================================
    // Seção de UI e Aparência (Suas preferências, tudo certo aqui)
    // ========================================================================
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.5,
    "editor.renderLineHighlight": "gutter",
    "editor.fontLigatures": true,
    "workbench.editor.labelFormat": "short",
    "explorer.compactFolders": false,
    "workbench.productIconTheme": "fluent-icons",
    "workbench.colorTheme": "Sublime Monokai",
    "material-icon-theme.folders.color": "#424865", // Configuração do outro tema de ícones

	// Ajustar Jupyter
	"jupyter.themeMatplotlibPlots": true,
	"jupyter.askForKernelRestart": false,
	"jupyter.notebookFileRoot": "${workspaceFolder}",

	// Melhor integração Ruff + UV
	"[python]": {
		"editor.defaultFormatter": "charliermarsh.ruff",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll.ruff": "explicit",
			"source.organizeImports.ruff": "explicit"
		},
		"editor.rulers": [79],
		"editor.tabSize": 4,
		"editor.insertSpaces": true
	},

	// Atalhos para Data Science
	"python.dataScience.sendSelectionToInteractiveWindow": true,
	"python.dataScience.textOutputLimit": 0,

	// Executar Python no terminal integrado
	"code-runner.executorMap": {
		"python": "cd .\\.venv\\Scripts\\; .\\Activate.ps1; cd ..; cd ..; clear ; uv run python"
	},

	// Melhorar pesquisa e navegação
	"search.followSymlinks": false,
	"explorer.confirmDelete": false,


    // ========================================================================
    // Seção do Editor e Comportamento Geral
    // ========================================================================
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "explorer.confirmDragAndDrop": false,
    "editor.suggestSelection": "first",
    "editor.linkedEditing": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 130,
    "editor.tabSize": 4,

    // ========================================================================
    // Configurações de Python (CENTRALIZADO E CORRIGIDO)
    // ========================================================================
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.envFile": "${workspaceFolder}/.env",

    // RECOMENDAÇÃO: Removido "python.defaultInterpreterPath". Use o comando "Python: Select Interpreter" (Ctrl+Shift+P).

    // Configuração de Testes (Correta)
    "python.testing.unittestEnabled": false, // RECOMENDAÇÃO: Desabilitar se usa pytest
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [ "tests" ],
    // "python.testing.autoTestDiscoverOnSaveEnabled": "true",

    // RECOMENDAÇÃO: Bloco unificado para Python. Este bloco tem prioridade sobre as configurações globais para arquivos .py
	"terminal.integrated.env.linux": {
		"PYTHONPATH": "${workspaceFolder}"
	},

    // RECOMENDAÇÃO: Removidas as configurações globais de formatOnSave e codeActionsOnSave para evitar conflitos.
    // RECOMENDAÇÃO: Removido bloco "isort.args", pois o Ruff já cuida disso.

    // ========================================================================
    // Configurações de Ferramentas e Extensões
    // ========================================================================

    // RECOMENDAÇÃO: O mapa do Code Runner para Python não é mais necessário se você usa o "Play Button" da extensão Python.
    "code-runner.runInTerminal": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.ignoreSelection": true,

    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,

    "files.associations": {
        "*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "emmet.includeLanguages": {
        "django-html": "html"
    },

    // ========================================================================
    // Seção de Segurança e Diversos
    // ========================================================================
    "security.workspace.trust.untrustedFiles": "prompt", // RECOMENDAÇÃO: Alterado para 'prompt' por segurança.
    "cSpell.language": "en,pt,pt_BR",
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 14,
